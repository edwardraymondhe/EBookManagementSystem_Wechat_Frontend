/* pages/bookbookDetail/bookbookDetail.wxss */
.bookDetail_wrapper{
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.bookDetail_wrapper .detail{
display: grid;
grid-template-rows: 100vw/100vh auto;
width: 100%;
height: 100%;
}

.bookDetail_wrapper .detail .cover{
display: grid;
grid-row: 1 / span 1;
margin: auto;
width: 100vw;
height: 100vw;
}

.bookDetail_wrapper .detail .info{
display: grid;
grid-row: 2 / span 1;
grid-template-rows: 30% 20% 50%;
color: black;
text-align: center;
font-family: 'Montserrat', sans-serif;
grid-row-gap: 1rem;
}

.bookDetail_wrapper .detail .info .name{
grid-row: 1 / span 1;
font-size: 1.7rem;
font-weight: bold;
}

.bookDetail_wrapper .detail .info .author{
  grid-row: 2 / span 1;
  font-size: 1.2rem;
  font-weight: bold;
}

.bookDetail_wrapper .detail .info .intro{
grid-row: 3 / span 1;
font-size: 0.9rem;
}

.bookDetail_wrapper .bar .price{
  width: 5rem;
  text-align: left;
  padding-left: 0.5rem;
  font-weight: bold;
}