/* pages/book/book.wxss */
.book_wrapper {
  border: 1px solid lightgrey;
  display: grid;
  width: 100%;
  height: 100%;
  grid-template-rows: 66% 33%;
  grid-gap: 1px;
  border-radius: 5px;
  margin: auto;
}

.book_wrapper .cover_wrapper{
  grid-row: 1 / span 1;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.book_wrapper .cover {
  border-radius: 5px 5px 0 0;
  width: 100%;
  left: 0;
  top: 0;
  object-fit: cover;
}

.book_wrapper .info {
  display: grid;
  grid-row: 2 / span 1;
  grid-template-rows: 70% 30%;
  padding: 5px;

  text-align: left;
  font-family: 'Montserrat', sans-serif;
  font-size: 1rem;
}

.book_wrapper .price{
  font-size: 1.1rem;
  font-weight: bold;
  color: orangered;
}