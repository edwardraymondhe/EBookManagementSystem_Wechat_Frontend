/* pages/components/orderItem/orderItem.wxss */
.orderItem_wrapper {
   display: grid;
  width: 100vw;
  height: 25vw;
  grid-template-columns: 50% 50%;
}

.orderItem_wrapper .orderNo{
  grid-column: 1 / span 1;
  justify-self: center;
  align-self: center;
}

.orderItem_wrapper .totalPrice{
  grid-column: 2 / span 1;
  justify-self: center;
  align-self: center;
}